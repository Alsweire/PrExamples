<Window x:Class="WpfApp1.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Редактирование" Height="300" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0, 0, 0, 0">
                Название дисциплины:
            </TextBlock>
            <TextBox x:Name="textB1" Margin="0,0,0,10"/>
            <TextBlock Margin="0,0,0,0">Семестр:</TextBlock>
            <ComboBox x:Name="comb" Margin="0,0,0,10" />
            <TextBlock>
                Комментарий:
            </TextBlock>
            <TextBox x:Name="textB3" Margin="0,0,0,10" Height="70" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />
            <Button x:Name="buttonSave" Click="ButtonSaveClick" Content="Сохранить" Margin="0,0,0,10" />
            <Button x:Name="buttonCancel" Click="ButtonCancelClick" Content="Отмена" />
        </StackPanel>
        
    </Grid>
</Window>
